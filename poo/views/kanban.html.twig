<!-- kanban area -->
<div class="row margin-top-2">
    <div class="kanban center z-depth-3 col s10 offset-s1 restrict">

        <!-- todo area -->
        <div id="droppableTodo" class="todo">
            <h3 class="tittle red-text">TO DO</h3>
            <!-- begining of ticket -->
            
            {% for ticket in Tickets %}

                {% if ticket.status == 'todo' %}

                    <div class="draggable card blue-grey darken-0 ticket" id="{{ticket.id}}">
                        <!-- edit button -->
                        <div class="fixed-action-btn horizontal btn-ticket-menu">
                            <a class="btn-floating btn-small orange">
                                <i class="large material-icons">menu</i>
                            </a>
                            <ul>
                                <li onclick="deleteTicket({{ticket.id}})"><a class="btn-floating red"><i class="material-icons">delete</i></a></li>
                                <li onclick="loadUpdateView({{ticket.id}})"><a class="btn-floating yellow darken-1 modal-trigger" href="#updateTicketModal"><i class="material-icons">mode_edit</i></a></li>
                            </ul>
                        </div><!-- end edit button -->

                        <div class="card-content white-text padding">
                            <span class="card-title">N°= </span><span id="id" class="card-title">{{ticket.id}}</span>
                            <p class="description padding">Description : <br />{{ticket.description}}</p>
                        </div>
                        <div class="padding">
                            <a class="dropdown-button btn orange" data-activates="info {{ticket.id}}">Info</a>
                            <ul id="info{{ticket.id}}" class="dropdown-content">';
                                <li><p class="center dropdown-title"><b>CREE PAR</b></p></li>
                                <li><p class="center dropdown-info"><i>{{ticket.maker}}</i></p></li>
                                <li class="divider"></li>
                                <li><p class="center dropdown-title"><b>ASSIGNE A</b></p></li>
                                <li><p class="center dropdown-info"><i>{{ticket.worker}}</i></p></li>
                            </ul>
                        </div>
                    </div>

                {% endif %}

            {% endfor %}
            <!-- end of ticket -->

        </div>

